<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <!-- Guest get SecurionPay checkout request signature -->
    <route url="/V1/guest-carts/:cartId/checkout-request" method="GET">
        <service class="Simon\SecurionPay\Api\GuestCheckoutRequestGeneratorInterface" method="getCheckoutRequest"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Customer get SecurionPay checkout request signature -->
    <route url="/V1/carts/mine/checkout-request" method="GET">
        <service class="Simon\SecurionPay\Api\CheckoutRequestGeneratorInterface" method="getCheckoutRequest"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <!-- Guest get SecurionPay 3D-Secure verification params -->
    <route url="/V1/guest-carts/:cartId/3d-secure-information" method="POST">
        <service class="Simon\SecurionPay\Api\GuestThreeDSecureManagementInterface" method="getThreeDSecureParams"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Customer get SecurionPay 3D-Secure verification params -->
    <route url="/V1/carts/mine/3d-secure-information" method="POST">
        <service class="Simon\SecurionPay\Api\ThreeDSecureManagementInterface" method="getThreeDSecureParams"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
</routes>
