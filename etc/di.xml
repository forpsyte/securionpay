<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Class Preferences -->
    <preference for="Simon\SecurionPay\Api\CheckoutRequestGeneratorInterface" type="\Simon\SecurionPay\Model\CheckoutRequestGenerator" />
    <preference for="Simon\SecurionPay\Api\CurrencyRepositoryInterface" type="Simon\SecurionPay\Model\CurrencyRepository"/>
    <preference for="Simon\SecurionPay\Api\CustomerRepositoryInterface" type="Simon\SecurionPay\Model\CustomerRepository"/>
    <preference for="Simon\SecurionPay\Api\EventRepositoryInterface" type="Simon\SecurionPay\Model\EventRepository" />
    <preference for="Simon\SecurionPay\Api\GuestCheckoutRequestGeneratorInterface" type="Simon\SecurionPay\Model\GuestCheckoutRequestGenerator" />
    <preference for="Simon\SecurionPay\Api\GuestThreeDSecureManagementInterface" type="Simon\SecurionPay\Model\GuestThreeDSecureManagement" />
    <preference for="Simon\SecurionPay\Api\ThreeDSecureManagementInterface" type="Simon\SecurionPay\Model\ThreeDSecureManagement" />
    <preference for="Simon\SecurionPay\Api\Data\CurrencyInterface" type="Simon\SecurionPay\Model\Currency" />
    <preference for="Simon\SecurionPay\Api\Data\CurrencySearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Simon\SecurionPay\Api\Data\CustomerInterface" type="Simon\SecurionPay\Model\Customer" />
    <preference for="Simon\SecurionPay\Api\Data\CustomerSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Simon\SecurionPay\Api\Data\CheckoutRequestDetailsInterface" type="Simon\SecurionPay\Model\CheckoutRequestDetails" />
    <preference for="Simon\SecurionPay\Api\Data\EventInterface" type="Simon\SecurionPay\Model\Event" />
    <preference for="Simon\SecurionPay\Api\Data\EventSearchResultsInterface" type="Magento\Framework\Api\SearchResults" />
    <preference for="Simon\SecurionPay\Api\Data\ThreeDSecureInformationInterface" type="Simon\SecurionPay\Model\ThreeDSecureInformation" />
    <preference for="Simon\SecurionPay\Api\Data\TokenInformationInterface" type="Simon\SecurionPay\Model\TokenInformation" />

    <!-- Payment Method Facade configuration -->
    <virtualType name="SecurionPayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Simon\SecurionPay\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form\Cc</argument>
            <argument name="infoBlockType" xsi:type="string">Simon\SecurionPay\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">SecurionPayValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">SecurionPayValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">SecurionPayCommandPool</argument>
        </arguments>
    </virtualType>
    <!-- END Payment Method Facade configuration -->

    <!-- Checkout Payment Method Facade configuration -->
    <virtualType name="SecurionPayCheckoutFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Simon\SecurionPay\Model\Ui\Checkout\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form\Cc</argument>
            <argument name="infoBlockType" xsi:type="string">Simon\SecurionPay\Block\Checkout\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">SecurionPayCheckoutValueHandlerPool</argument>
            <argument name="validatorPool" xsi:type="object">SecurionPayValidatorPool</argument>
            <argument name="commandPool" xsi:type="object">SecurionPayCheckoutCommandPool</argument>
        </arguments>
    </virtualType>
    <!-- END Payment Method Facade configuration -->

    <!-- Vault payment method facade configuration -->
    <virtualType name="SecurionPayCreditCardVaultFacade" type="Magento\Vault\Model\Method\Vault">
        <arguments>
            <argument name="config" xsi:type="object">SecurionPayVaultPaymentConfig</argument>
            <argument name="valueHandlerPool" xsi:type="object">SecurionPayVaultPaymentValueHandlerPool</argument>
            <argument name="vaultProvider" xsi:type="object">SecurionPayFacade</argument>
            <argument name="code" xsi:type="const">Simon\SecurionPay\Model\Ui\ConfigProvider::CC_VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayVaultPaymentValueHandlerPool" type="VaultPaymentValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">SecurionPayVaultPaymentValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayVaultPaymentValueHandler" type="VaultPaymentDefaultValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">SecurionPayVaultPaymentConfig</argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayVaultPaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Simon\SecurionPay\Model\Ui\ConfigProvider::CC_VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <!-- END Vault payment method facade configuration -->

    <!-- Helper configurations -->
    <type name="Simon\SecurionPay\Helper\Data">
        <arguments>
            <argument name="methods" xsi:type="array">
                <item name="securionpay" xsi:type="const">Simon\SecurionPay\Model\Ui\ConfigProvider::CODE</item>
                <item name="securionpay_checkout" xsi:type="const">Simon\SecurionPay\Model\Ui\Checkout\ConfigProvider::CODE</item>
                <item name="securionpay_cc_vault" xsi:type="const">Simon\SecurionPay\Model\Ui\ConfigProvider::CC_VAULT_CODE</item>
                <!-- TODO - Add additional methods for Vault and SecurionPay Checkout-->
            </argument>
        </arguments>
    </type>
    <!-- END Helper configurations -->

    <!-- Configuration reader -->
    <type name="Simon\SecurionPay\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Simon\SecurionPay\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </type>
    <type name="Simon\SecurionPay\Gateway\Config\Checkout\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Simon\SecurionPay\Model\Ui\Checkout\ConfigProvider::CODE</argument>
        </arguments>
    </type>
    <!-- END Configuration reader -->

    <!-- Logger, initialized with SecurionPay -->
    <virtualType name="SecurionPayLoggerForTransaction" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">Simon\SecurionPay\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <type name="Simon\SecurionPay\Gateway\Http\Client\TransactionAuthorization">
        <arguments>
            <argument name="customLogger" xsi:type="object">SecurionPayLoggerForTransaction</argument>
        </arguments>
    </type>
    <type name="Simon\SecurionPay\Gateway\Http\Client\TransactionCapture">
        <arguments>
            <argument name="customLogger" xsi:type="object">SecurionPayLoggerForTransaction</argument>
        </arguments>
    </type>
    <type name="Simon\SecurionPay\Gateway\Http\Client\TransactionRefund">
        <arguments>
            <argument name="customLogger" xsi:type="object">SecurionPayLoggerForTransaction</argument>
        </arguments>
    </type>
    <type name="Simon\SecurionPay\Gateway\Http\Client\TransactionSale">
        <arguments>
            <argument name="customLogger" xsi:type="object">SecurionPayLoggerForTransaction</argument>
        </arguments>
    </type>
    <!-- END Logger, initialized with SecurionPay -->

    <!-- Commands infrastructure -->
    <virtualType name="SecurionPayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">SecurionPayAuthorizeCommand</item>
                <item name="vault_authorize" xsi:type="string">SecurionPayVaultAuthorizeCommand</item>
                <item name="sale" xsi:type="string">SecurionPaySaleCommand</item>
                <item name="vault_sale" xsi:type="string">SecurionPayVaultSaleCommand</item>
                <item name="capture" xsi:type="string">SecurionPayCaptureStrategyCommand</item>
                <item name="settlement" xsi:type="string">SecurionPayCaptureCommand</item>
                <item name="refund" xsi:type="string">SecurionPayRefundCommand</item>
                <item name="void" xsi:type="string">SecurionPayCancelCommand</item>
                <item name="cancel" xsi:type="string">SecurionPayCancelCommand</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Commands infrastructure -->

    <!-- Commands infrastructure -->
    <virtualType name="SecurionPayCheckoutCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">SecurionPayCheckoutAuthorizeCommand</item>
                <item name="sale" xsi:type="string">SecurionPayCheckoutSaleCommand</item>
                <item name="capture" xsi:type="string">SecurionPayCaptureStrategyCommand</item>
                <item name="settlement" xsi:type="string">SecurionPayCaptureCommand</item>
                <item name="refund" xsi:type="string">SecurionPayRefundCommand</item>
                <item name="void" xsi:type="string">SecurionPayCancelCommand</item>
                <item name="cancel" xsi:type="string">SecurionPayCancelCommand</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Commands infrastructure -->

    <!-- Command managers section for Vault -->
    <virtualType name="SecurionPayCommandManager" type="Magento\Payment\Gateway\Command\CommandManager">
        <arguments>
            <argument name="commandPool" xsi:type="object">SecurionPayCommandPool</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Payment\Gateway\Command\CommandManagerPool">
        <arguments>
            <argument name="executors" xsi:type="array">
                <item name="securionpay" xsi:type="string">SecurionPayCommandManager</item>
            </argument>
        </arguments>
    </type>
    <!-- END Command managers section for Vault -->

    <!-- Error Mapping -->
    <virtualType name="Simon\SecurionPay\Gateway\ErrorMapper\VirtualConfigReader" type="Magento\Payment\Gateway\ErrorMapper\VirtualConfigReader">
        <arguments>
            <argument name="fileName" xsi:type="string">securionpay_error_mapping.xml</argument>
        </arguments>
    </virtualType>
    <virtualType name="Simon\SecurionPay\Gateway\ErrorMapper\VirtualMappingData" type="Magento\Payment\Gateway\ErrorMapper\MappingData">
        <arguments>
            <argument name="reader" xsi:type="object">Simon\SecurionPay\Gateway\ErrorMapper\VirtualConfigReader</argument>
            <argument name="cacheId" xsi:type="string">securionpay_error_mapper</argument>
        </arguments>
    </virtualType>
    <virtualType name="Simon\SecurionPay\Gateway\ErrorMapper\VirtualErrorMessageMapper" type="Magento\Payment\Gateway\ErrorMapper\ErrorMessageMapper">
        <arguments>
            <argument name="messageMapping" xsi:type="object">Simon\SecurionPay\Gateway\ErrorMapper\VirtualMappingData</argument>
        </arguments>
    </virtualType>
    <!-- END Error Mapping -->

    <!-- Authorize Transaction Request -->
    <virtualType name="SecurionPayAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Simon\SecurionPay\Gateway\Request\Authorize\PaymentDataBuilder</item>
                <item name="address" xsi:type="string">Simon\SecurionPay\Gateway\Request\AddressDataBuilder</item>
                <item name="vault" xsi:type="string">Simon\SecurionPay\Gateway\Request\VaultDataBuilder</item>
                <item name="3d_secure" xsi:type="string">Simon\SecurionPay\Gateway\Request\ThreeDSecure\PaymentDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayCheckoutAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Simon\SecurionPay\Gateway\Request\Checkout\Authorize\PaymentDataBuilder</item>
                <item name="customer" xsi:type="string">Simon\SecurionPay\Gateway\Request\Checkout\Authorize\CustomerDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="SecurionPayVaultAuthorizeRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Simon\SecurionPay\Gateway\Request\Authorize\Payment\VaultDataBuilder</item>
                <item name="address" xsi:type="string">Simon\SecurionPay\Gateway\Request\AddressDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Authorize Transaction Request -->

    <!-- Capture Transaction Request -->
    <virtualType name="SecurionPayCaptureRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Simon\SecurionPay\Gateway\Request\Capture\PaymentDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Capture Transaction Request -->

    <!-- Refund Transaction Request -->
    <virtualType name="SecurionPayRefundRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Simon\SecurionPay\Gateway\Request\Refund\PaymentDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Refund Transaction Request -->

    <!-- Refund Transaction Request -->
    <virtualType name="SecurionPayCancelRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Simon\SecurionPay\Gateway\Request\Cancel\PaymentDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Refund Transaction Request -->

    <!-- Authorize Command  -->
    <virtualType name="SecurionPayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayAuthorizeRequest</argument>
            <argument name="transferFactory" xsi:type="object">Simon\SecurionPay\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Simon\SecurionPay\Gateway\Http\Client\TransactionAuthorize</argument>
            <argument name="handler" xsi:type="object">SecurionPayAuthorizationHandler</argument>
            <argument name="validator" xsi:type="object">Simon\SecurionPay\Gateway\Validator\ResponseValidator</argument>
            <argument name="errorMessageMapper" xsi:type="object">Simon\SecurionPay\Gateway\ErrorMapper\VirtualErrorMessageMapper</argument>
        </arguments>
    </virtualType>

    <virtualType name="SecurionPayCheckoutAuthorizeCommand" type="SecurionPayAuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayCheckoutAuthorizeRequest</argument>
            <argument name="client" xsi:type="object">Simon\SecurionPay\Gateway\Http\Client\Checkout\TransactionGetCharge</argument>
            <argument name="handler" xsi:type="object">SecurionPayCheckoutAuthorizationHandler</argument>
            <argument name="validator" xsi:type="object">Simon\SecurionPay\Gateway\Validator\Checkout\ResponseValidator</argument>
        </arguments>
    </virtualType>

    <virtualType name="SecurionPayVaultAuthorizeCommand" type="SecurionPayAuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayVaultAuthorizeRequest</argument>
        </arguments>
    </virtualType>
    <!-- END Authorize Command  -->

    <!-- Sale Command  -->
    <virtualType name="SecurionPaySaleCommand" type="SecurionPayAuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayAuthorizeRequest</argument>
            <argument name="client" xsi:type="object">Simon\SecurionPay\Gateway\Http\Client\TransactionSale</argument>
            <argument name="handler" xsi:type="object">SecurionPaySaleHandler</argument>
        </arguments>
    </virtualType>

    <virtualType name="SecurionPayCheckoutSaleCommand" type="SecurionPayCheckoutAuthorizeCommand">
        <arguments>
            <argument name="handler" xsi:type="object">SecurionPaySaleHandler</argument>
        </arguments>
    </virtualType>

    <virtualType name="SecurionPayVaultSaleCommand" type="SecurionPaySaleCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayVaultAuthorizeRequest</argument>
        </arguments>
    </virtualType>
    <!-- END Sale Command  -->

    <!-- Capture Command  -->
    <virtualType name="SecurionPayCaptureCommand" type="SecurionPayAuthorizeCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayCaptureRequest</argument>
            <argument name="client" xsi:type="object">Simon\SecurionPay\Gateway\Http\Client\TransactionCapture</argument>
            <argument name="handler" xsi:type="object">SecurionPayCaptureHandler</argument>
        </arguments>
    </virtualType>
    <!-- END Capture Command  -->

    <!-- BEGIN Capture Strategy Command  -->
    <virtualType name="SecurionPayCaptureStrategyCommand" type="Simon\SecurionPay\Gateway\Command\CaptureStrategyCommand">
        <arguments>
            <argument name="commandPool" xsi:type="object">SecurionPayCommandPool</argument>
        </arguments>
    </virtualType>
    <!-- END Capture Strategy Command -->

    <!-- BEGIN Refund Command -->
    <virtualType name="SecurionPayRefundCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayRefundRequest</argument>
            <argument name="transferFactory" xsi:type="object">Simon\SecurionPay\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Simon\SecurionPay\Gateway\Http\Client\TransactionRefund</argument>
            <argument name="handler" xsi:type="object">Simon\SecurionPay\Gateway\Response\RefundHandler</argument>
            <argument name="validator" xsi:type="object">Simon\SecurionPay\Gateway\Validator\ResponseValidator</argument>
            <argument name="errorMessageMapper" xsi:type="object">Simon\SecurionPay\Gateway\ErrorMapper\VirtualErrorMessageMapper</argument>
        </arguments>
    </virtualType>
    <!-- END Refund Command -->

    <!-- BEGIN Void Command -->
    <virtualType name="SecurionPayCancelCommand" type="SecurionPayRefundCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">SecurionPayCancelRequest</argument>
            <argument name="handler" xsi:type="object">Simon\SecurionPay\Gateway\Response\VoidHandler</argument>
        </arguments>
    </virtualType>
    <!-- END Void Command -->

    <!-- BEGIN Value handlers infrastructure -->
    <virtualType name="SecurionPayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">SecurionPayConfigValueHandler</item>
                <item name="can_void" xsi:type="string">Simon\SecurionPay\Gateway\Config\CanVoidHandler</item>
                <item name="can_cancel" xsi:type="string">Simon\SecurionPay\Gateway\Config\CanVoidHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayCheckoutValueHandlerPool" type="SecurionPayValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">SecurionPayCheckoutConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Simon\SecurionPay\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayCheckoutConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Simon\SecurionPay\Gateway\Config\Checkout\Config</argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayAuthorizationHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="auth_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\AuthDetailsHandler</item>
                <item name="txn_id" xsi:type="string">Simon\SecurionPay\Gateway\Response\TransactionIdHandler</item>
                <item name="risk_data" xsi:type="string">Simon\SecurionPay\Gateway\Response\RiskDataHandler</item>
                <item name="customer_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\CustomerDetailsHandler</item>
                <item name="vault_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\VaultDetailsHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayCheckoutAuthorizationHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="auth_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\AuthDetailsHandler</item>
                <item name="charge_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\ChargeDetailsHandler</item>
                <item name="txn_id" xsi:type="string">Simon\SecurionPay\Gateway\Response\TransactionIdHandler</item>
                <item name="risk_data" xsi:type="string">Simon\SecurionPay\Gateway\Response\RiskDataHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPaySaleHandler" type="SecurionPayAuthorizationHandler">
            <arguments>
                <argument name="handlers" xsi:type="array">
                    <item name="txn_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\AuthDetailsHandler</item>
                    <item name="sale_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\SaleDetailsHandler</item>
                    <item name="risk_data" xsi:type="string">Simon\SecurionPay\Gateway\Response\RiskDataHandler</item>
                    <item name="customer_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\CustomerDetailsHandler</item>
                    <item name="vault_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\VaultDetailsHandler</item>
                </argument>
            </arguments>
    </virtualType>
    <virtualType name="SecurionPayCaptureHandler" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="settlement_details" xsi:type="string">Simon\SecurionPay\Gateway\Response\SettleDetailsHandler</item>
                <item name="txn_id" xsi:type="string">Simon\SecurionPay\Gateway\Response\TransactionIdHandler</item>
                <item name="risk_data" xsi:type="string">Simon\SecurionPay\Gateway\Response\RiskDataHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Value handlers infrastructure -->

    <!-- SecurionPay validators infrastructure -->
    <virtualType name="SecurionPayCountryValidator" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">Simon\SecurionPay\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <virtualType name="SecurionPayValidatorPool" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">SecurionPayCountryValidator</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END SecurionPay validators infrastructure -->

    <!-- BEGIN Payment blocks configuration -->
    <type name="Simon\SecurionPay\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">Simon\SecurionPay\Gateway\Config\Config</argument>
        </arguments>
    </type>
    <virtualType name="Simon\SecurionPay\Block\Checkout\Info" type="Simon\SecurionPay\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">Simon\SecurionPay\Gateway\Config\Checkout\Config</argument>
        </arguments>
    </virtualType>
    <!-- END Payment blocks configuration -->

    <!-- Collections Processors -->
    <virtualType name="Simon\SecurionPay\Model\Api\SearchCriteria\CurrencyCollectionProcessor" type="Magento\Framework\Api\SearchCriteria\CollectionProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="filters" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\FilterProcessor</item>
                <item name="sorting" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\SortingProcessor</item>
                <item name="pagination" xsi:type="object">Magento\Framework\Api\SearchCriteria\CollectionProcessor\PaginationProcessor</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Simon\SecurionPay\Model\CurrencyRepository">
        <arguments>
            <argument name="collectionProcessor" xsi:type="object">Simon\SecurionPay\Model\Api\SearchCriteria\CurrencyCollectionProcessor</argument>
        </arguments>
    </type>
    <virtualType name="Simon\SecurionPay\Model\Api\SearchCriteria\CustomerCollectionProcessor" type="Magento\Framework\Api\SearchCriteria\CollectionProcessor">
        <arguments>
            <argument name="processors" xsi:type="array">
